[
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      // window related commands (ctrl-w X)
      "ctrl-a h": "workspace::ActivatePaneLeft",
      "ctrl-a l": "workspace::ActivatePaneRight",
      "ctrl-a k": "workspace::ActivatePaneUp",
      "ctrl-a j": "workspace::ActivatePaneDown",
      "ctrl-a shift-h": "workspace::SwapPaneLeft",
      "ctrl-a shift-l": "workspace::SwapPaneRight",
      "ctrl-a shift-k": "workspace::SwapPaneUp",
      "ctrl-a shift-j": "workspace::SwapPaneDown",
      "ctrl-a |": "pane::SplitLeft",
      "ctrl-a -": "pane::SplitUp",
      "ctrl-a q": "pane::CloseAllItems",
      "ctrl-a ctrl-q": "pane::CloseAllItems",
      "ctrl-a o": "workspace::CloseInactiveTabsAndPanes",
      "ctrl-a ctrl-o": "workspace::CloseInactiveTabsAndPanes",
      "ctrl-a c": "workspace::NewFileSplitVertical",
      "ctrl-a x": "pane::CloseActiveItem",
      "ctrl-f4": "pane::CloseActiveItem",
      "ctrl-a p": "project_panel::ToggleFocus"
    }
  }
]
